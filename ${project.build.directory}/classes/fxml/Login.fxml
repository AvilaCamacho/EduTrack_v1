<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="loginRoot" prefWidth="1280" prefHeight="800"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.edutrack.controller.LoginController"
            style="-fx-background-color: #F5F7F8; -fx-border-radius: 10;">

    <!-- Panel azul izquierdo -->
    <AnchorPane style="-fx-background-color: #E1EDF8;"
                prefWidth="640" prefHeight="800"
                AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0" />

    <!-- Logo pequeño superior -->
    <ImageView fitWidth="35" fitHeight="35"
               AnchorPane.leftAnchor="24" AnchorPane.topAnchor="22">
        <image>
            <Image url="@images/icono_home.svg"/>
        </image>
    </ImageView>

    <!-- "EduTrack" texto -->
    <Label text="EduTrack"
           AnchorPane.leftAnchor="68" AnchorPane.topAnchor="27"
           style="-fx-font-family: 'Poppins'; -fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #4A4A4A;"/>

    <!-- Imagen grande -->
    <ImageView fitWidth="400" fitHeight="400"
               AnchorPane.leftAnchor="112" AnchorPane.topAnchor="89"
               style="-fx-border-radius: 25;">
        <image>
            <Image url="@images/placeholder.png"/>
        </image>
    </ImageView>

    <!-- Texto grande motivacional -->
    <Label text="Controla la asistencia. Mejora el aprendizaje."
           AnchorPane.leftAnchor="112" AnchorPane.topAnchor="521"
           prefWidth="400"
           style="-fx-font-family: 'Poppins'; -fx-font-size: 32; -fx-font-weight: bold; -fx-text-fill: #4A4A4A; -fx-text-alignment: center;"/>

    <!-- Footer -->
    <Label text="©2025 Edutrack. Derechos Reservados."
           AnchorPane.leftAnchor="180" AnchorPane.topAnchor="699"
           style="-fx-font-family: 'Inter'; -fx-font-size: 12; -fx-text-fill: #9E9E9E;"/>

    <!-- Título derecha -->
    <Label text="Inicia Sesion En Tu Cuenta"
           AnchorPane.leftAnchor="754" AnchorPane.topAnchor="150"
           style="-fx-font-family: 'Poppins'; -fx-font-size: 32; -fx-font-weight: bold; -fx-text-fill: #4B4B4B;"/>

    <Label text="Bienvenido de vuelta! Porfavor ingresa tus datos."
           AnchorPane.leftAnchor="754" AnchorPane.topAnchor="198"
           style="-fx-font-family: 'Inter'; -fx-font-size: 15; -fx-text-fill: #9E9E9E;"/>

    <!-- Campo Usuario -->
    <Label text="Correo Electronico"
           AnchorPane.leftAnchor="750" AnchorPane.topAnchor="263"
           style="-fx-font-family: 'Inter'; -fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #656565;" />

    <TextField fx:id="usernameField"
               promptText="nombre@ejemplo.com"
               AnchorPane.leftAnchor="748" AnchorPane.topAnchor="293"
               prefWidth="425" prefHeight="44"
               style="-fx-background-color: white; -fx-border-color: #DFE5EE; -fx-border-radius: 6;"/>

    <!-- Icono correo -->
    <ImageView fitWidth="24" fitHeight="24"
               AnchorPane.leftAnchor="756" AnchorPane.topAnchor="303">
        <image><Image url="@images/icon_email.svg"/></image>
    </ImageView>

    <!-- Campo contraseña -->
    <Label text="Contraseña"
           AnchorPane.leftAnchor="748" AnchorPane.topAnchor="369"
           style="-fx-font-family: 'Inter'; -fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #5C5D5D;" />

    <PasswordField fx:id="passwordField"
                   promptText="Ingresa tu contraseña"
                   AnchorPane.leftAnchor="748" AnchorPane.topAnchor="396"
                   prefWidth="425" prefHeight="44"
                   style="-fx-background-color: white; -fx-border-color: #DFE5EE; -fx-border-radius: 6;"/>

    <!-- Icono contraseña -->
    <ImageView fitWidth="24" fitHeight="24"
               AnchorPane.leftAnchor="756" AnchorPane.topAnchor="406">
        <image><Image url="@images/re1.svg"/></image>
    </ImageView>

    <!-- Ojo mostrar contraseña -->
    <ImageView fitWidth="24" fitHeight="24"
               AnchorPane.leftAnchor="1136" AnchorPane.topAnchor="406">
        <image><Image url="@images/re1.svg"/></image>
    </ImageView>

    <!-- Botón Iniciar -->
    <Button fx:id="loginButton"
            text="Iniciar Secion"
            onAction="#handleLogin"
            AnchorPane.leftAnchor="749" AnchorPane.topAnchor="499"
            prefWidth="425" prefHeight="44"
            style="-fx-background-color: #359EFF; -fx-text-fill: white;
                   -fx-font-size: 16; -fx-font-family: 'Inter'; -fx-font-weight: bold;
                   -fx-border-radius: 6;"/>

    <!-- Olvidaste contraseña -->
    <Label text="Olvidaste Tu Contraseña?"
           AnchorPane.leftAnchor="880" AnchorPane.topAnchor="558"
           style="-fx-font-family: 'Inter'; -fx-font-size: 13; -fx-font-weight: bold; -fx-text-fill: #359EFF;" />

    <!-- Label mensajes de error -->
    <Label fx:id="messageLabel"
           AnchorPane.leftAnchor="748" AnchorPane.topAnchor="590"
           prefWidth="425"
           style="-fx-font-family: 'Inter'; -fx-text-fill: red; -fx-font-size: 13;"/>

</AnchorPane>