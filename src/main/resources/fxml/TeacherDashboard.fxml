<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.edutrack.controller.TeacherDashboardController" styleClass="dashboard-container">

    <top>
        <VBox styleClass="header">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <Label text="Panel del Maestro" styleClass="header-title">
                <font>
                    <Font name="System Bold" size="24.0"/>
                </font>
            </Label>
            <Label fx:id="welcomeLabel" styleClass="header-subtitle">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>
        </VBox>
    </top>

    <center>
        <!-- Usamos GridPane con columnas porcentuales para responsividad -->
        <GridPane HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
            <columnConstraints>
                <ColumnConstraints percentWidth="30.0" />
                <ColumnConstraints percentWidth="70.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="ALWAYS" />
            </rowConstraints>

            <!-- Left: Groups Section -->
            <VBox spacing="10.0" styleClass="section" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10" />
                </padding>
                <Label text="Mis Grupos" styleClass="section-title">
                    <font>
                        <Font name="System Bold" size="16.0"/>
                    </font>
                </Label>

                <ListView fx:id="groupListView" VBox.vgrow="ALWAYS" styleClass="list-view">
                    <placeholder>
                        <Label text="No hay grupos creados"/>
                    </placeholder>
                </ListView>

                <HBox spacing="10.0">
                    <Button fx:id="createGroupButton" text="Crear Grupo" onAction="#handleCreateGroup" styleClass="primary-button large"/>
                    <Button fx:id="deleteGroupButton" text="Eliminar Grupo" onAction="#handleDeleteGroup" styleClass="danger-button large"/>
                </HBox>
            </VBox>

            <!-- Right: Students Section -->
            <VBox spacing="10.0" styleClass="section" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10" />
                </padding>
                <Label text="Alumnos del Grupo" styleClass="section-title">
                    <font>
                        <Font name="System Bold" size="16.0"/>
                    </font>
                </Label>

                <TableView fx:id="studentsTable" VBox.vgrow="ALWAYS" styleClass="table-view">
                    <columns>
                        <TableColumn fx:id="studentNameColumn" text="Nombre del Alumno" prefWidth="250.0"/>
                    </columns>
                    <placeholder>
                        <Label text="Seleccione un grupo para ver los alumnos"/>
                    </placeholder>
                </TableView>

                <!-- Label que indica que no hay selecci贸n (usado por el controlador) -->
                <Label fx:id="noSelectionLabel" text="Seleccione un grupo para ver acciones" styleClass="muted-label" />

                <HBox spacing="16.0" fx:id="studentActions">
                    <Button fx:id="addStudentButton" text="Agregar Alumno" onAction="#handleAddStudent" styleClass="primary-button large"/>
                    <Button fx:id="removeStudentButton" text="Eliminar Alumno" onAction="#handleRemoveStudent" styleClass="danger-button large"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button fx:id="viewHistoryButton" text="Historial" onAction="#handleViewHistory" styleClass="muted-button" />
                    <Button fx:id="takeAttendanceButton" text="Pasar Lista" onAction="#handleTakeAttendance" styleClass="success-button large"/>
                    <!-- Nuevo bot贸n para generar calificaci贸n de asistencia -->
                    <Button fx:id="generateAttendanceButton" text="Generar Calificaci贸n" onAction="#handleGenerateAttendanceGrade" styleClass="primary-button large" />
                </HBox>
            </VBox>
        </GridPane>
    </center>
</BorderPane>