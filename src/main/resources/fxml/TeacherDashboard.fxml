<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.edutrack.controller.TeacherDashboardController" styleClass="dashboard-container">
    
    <top>
        <VBox styleClass="header">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <Label text="Panel del Maestro" styleClass="header-title">
                <font>
                    <Font name="System Bold" size="24.0"/>
                </font>
            </Label>
            <Label fx:id="welcomeLabel" styleClass="header-subtitle">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>
        </VBox>
    </top>

    <center>
        <HBox spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>

            <!-- Groups Section -->
            <VBox spacing="10.0" HBox.hgrow="ALWAYS" styleClass="section">
                <Label text="Mis Grupos" styleClass="section-title">
                    <font>
                        <Font name="System Bold" size="16.0"/>
                    </font>
                </Label>

                <ListView fx:id="groupListView" VBox.vgrow="ALWAYS" styleClass="list-view">
                    <placeholder>
                        <Label text="No hay grupos creados"/>
                    </placeholder>
                </ListView>

                <HBox spacing="10.0">
                    <Button fx:id="createGroupButton" text="Crear Grupo" onAction="#handleCreateGroup" styleClass="primary-button"/>
                    <Button fx:id="deleteGroupButton" text="Eliminar Grupo" onAction="#handleDeleteGroup" styleClass="danger-button"/>
                </HBox>
            </VBox>

            <!-- Students Section -->
            <VBox spacing="10.0" HBox.hgrow="ALWAYS" styleClass="section">
                <Label text="Alumnos del Grupo" styleClass="section-title">
                    <font>
                        <Font name="System Bold" size="16.0"/>
                    </font>
                </Label>

                <TableView fx:id="studentsTable" VBox.vgrow="ALWAYS" styleClass="table-view">
                    <columns>
                        <TableColumn fx:id="studentNameColumn" text="Nombre del Alumno" prefWidth="250.0"/>
                    </columns>
                    <placeholder>
                        <Label text="Seleccione un grupo para ver los alumnos"/>
                    </placeholder>
                </TableView>

                <HBox spacing="10.0">
                    <Button fx:id="addStudentButton" text="Agregar Alumno" onAction="#handleAddStudent" styleClass="primary-button"/>
                    <Button fx:id="removeStudentButton" text="Eliminar Alumno" onAction="#handleRemoveStudent" styleClass="danger-button"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button fx:id="takeAttendanceButton" text="Pasar Lista" onAction="#handleTakeAttendance" styleClass="success-button"/>
                </HBox>
            </VBox>
        </HBox>
    </center>
</BorderPane>
