<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.edutrack.controller.TeacherDashboardController" styleClass="dashboard-root">

    <!-- Top header: logo, search, top menu and CTA -->
    <top>
        <HBox spacing="12" alignment="CENTER_LEFT" styleClass="app-header">
            <padding>
                <Insets top="10" right="16" bottom="10" left="16" />
            </padding>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <ImageView fx:id="logoImage" fitHeight="36" preserveRatio="true" styleClass="logo" />
                <Label text="EduTrack" styleClass="app-title" />
            </HBox>

            <!-- Search field (centrado en la cabecera) -->
            <Region HBox.hgrow="ALWAYS" />
            <HBox spacing="8" alignment="CENTER">
                <TextField fx:id="searchField" promptText="Buscar grupos, alumnos, ..." styleClass="search-field" />
            </HBox>

            <!-- Top navigation (compact) -->
            <HBox spacing="8" styleClass="top-menu" alignment="CENTER_RIGHT">
                <Button fx:id="menuDashboardButton" text="Dashboard" onAction="#handleShowDashboard" styleClass="menu-button menu-button-active" />
                <Button fx:id="menuGroupsButton" text="Grupos" onAction="#handleShowGroups" styleClass="menu-button" />
                <Button fx:id="menuReportsButton" text="Reportes" onAction="#handleShowReports" styleClass="menu-button" />
                <Button fx:id="menuSettingsButton" text="Ajustes" onAction="#handleShowSettings" styleClass="menu-button" />
            </HBox>

            <Region HBox.hgrow="ALWAYS" />

            <Button fx:id="takeAttendanceButton" text="Tomar Asistencia" onAction="#handleTakeAttendance" styleClass="primary-button" />
        </HBox>
    </top>

    <!-- Left sidebar: grupos y acciones -->
    <left>
        <VBox spacing="12" styleClass="sidebar" prefWidth="260">
            <Label text="Mis Grupos" styleClass="section-title" />
            <ListView fx:id="groupListView" VBox.vgrow="ALWAYS" styleClass="groups-preview" />
            <HBox spacing="8">
                <Button fx:id="createGroupButton" text="Crear" onAction="#handleCreateGroup" styleClass="secondary-button" />
                <Button fx:id="deleteGroupButton" text="Eliminar" onAction="#handleDeleteGroup" styleClass="danger-button" />
            </HBox>
        </VBox>
    </left>

    <!-- Center: contenido dinámico (Dashboard, Grupos, Reports, etc.) -->
    <center>
        <StackPane>
            <VBox fx:id="centerPlaceholder" spacing="12" styleClass="content-area">
                <padding>
                    <Insets top="14" right="14" bottom="14" left="14" />
                </padding>
                <!-- El contenido se carga dinámicamente desde el controlador -->
            </VBox>
        </StackPane>
    </center>

    <!-- Right rail: accesos rápidos, usuario, filtros -->
    <right>
        <VBox fx:id="rightRail" spacing="12" styleClass="right-rail" prefWidth="260">
            <padding>
                <Insets top="12" right="12" bottom="12" left="12" />
            </padding>

            <VBox spacing="8" styleClass="card user-card">
                <Label text="Profesor" styleClass="header-subtitle" />
                <Label fx:id="welcomeLabel" text="Bienvenido, Profesor" styleClass="welcome-title" />
            </VBox>

            <VBox spacing="8" styleClass="card groups-panel">
                <Label text="Acciones rápidas" styleClass="section-title" />
                <Button text="Crear grupo" onAction="#handleCreateGroup" styleClass="secondary-button" />
                <Button text="Tomar lista rápida" onAction="#handleTakeAttendance" styleClass="primary-button" />
            </VBox>

            <VBox spacing="8" styleClass="card groups-panel">
                <Label text="Filtros" styleClass="section-title" />
                <ComboBox promptText="Filtrar por materia" />
                <ComboBox promptText="Filtrar por aula" />
            </VBox>

            <Region VBox.vgrow="ALWAYS" />

            <Button text="Cerrar sesión" styleClass="secondary-button" />
        </VBox>
    </right>

    <!-- Modal overlay for delete confirmation (kept outside BorderPane so it overlays full window) -->
    <StackPane>
        <Pane fx:id="modalOverlay" styleClass="modal-overlay" visible="false" managed="false" />
        <VBox alignment="CENTER" spacing="12" visible="false" managed="false">
            <VBox spacing="12" styleClass="modal-dialog" alignment="CENTER" maxWidth="480">
                <Label fx:id="modalTitleLabel" text="¿Eliminar grupo?" styleClass="modal-title" />
                <Label fx:id="modalBodyLabel" text="Esta acción eliminará el grupo y sus relaciones." wrapText="true" styleClass="modal-body" />
                <HBox spacing="12">
                    <Button fx:id="confirmDeleteButton" text="Eliminar grupo" onAction="#handleConfirmDelete" styleClass="danger-button" />
                    <Button text="Cancelar" onAction="#handleCancelDelete" styleClass="secondary-button" />
                </HBox>
            </VBox>
        </VBox>
    </StackPane>

</BorderPane>