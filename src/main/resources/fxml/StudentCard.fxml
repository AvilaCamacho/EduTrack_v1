<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.edutrack.controller.StudentCardController" styleClass="student-card" prefWidth="200" prefHeight="86">
    <children>
        <VBox spacing="8" AnchorPane.topAnchor="6" AnchorPane.leftAnchor="6" AnchorPane.rightAnchor="6">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label fx:id="avatarLabel" styleClass="student-avatar" />
                <VBox>
                    <Label fx:id="nameLabel" styleClass="student-name" />
                    <Label fx:id="metaLabel" styleClass="student-meta" />
                </VBox>
            </HBox>
            <HBox spacing="8" alignment="CENTER_LEFT">
                <Button fx:id="removeBtn" text="Eliminar" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>