<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.edutrack.controller.ReportsController">
    <children>
        <VBox spacing="12" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
            <padding>
                <Insets top="16" right="16" bottom="16" left="16"/>
            </padding>
            <Label text="Reportes" styleClass="page-title" />
            <Label text="Genera y exporta reportes de asistencia, rendimiento y más." styleClass="subtitle" />
            <HBox spacing="12">
                <Button text="Exportar PDF" styleClass="primary-button" />
                <Button text="Exportar Excel" styleClass="secondary-button" />
            </HBox>
            <TableView VBox.vgrow="ALWAYS" styleClass="table-view">
                <columns>
                    <TableColumn text="Fecha" prefWidth="200" />
                    <TableColumn text="Tipo" prefWidth="200" />
                    <TableColumn text="Descripción" prefWidth="400" />
                </columns>
                <placeholder>
                    <Label text="No hay datos para mostrar" />
                </placeholder>
            </TableView>
        </VBox>
    </children>
</AnchorPane>