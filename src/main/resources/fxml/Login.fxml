<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="loginRoot" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.edutrack.controller.LoginController" styleClass="login-container">
    <children>
        <StackPane AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <VBox alignment="CENTER" spacing="18.0" styleClass="login-card" maxWidth="620.0" maxHeight="420.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                <padding>
                    <Insets top="18.0" right="24.0" left="24.0" bottom="18.0"/>
                </padding>

                <Label text="EduTrack" styleClass="card-title">
                    <font>
                        <Font name="System Bold" size="26.0"/>
                    </font>
                </Label>

                <Label text="Sistema de Gestión Educativa" styleClass="card-subtitle">
                    <font>
                        <Font size="13.0"/>
                    </font>
                </Label>

                <VBox spacing="12.0" maxWidth="520.0">
                    <VBox spacing="6.0">
                        <Label text="Usuario:" styleClass="field-label"/>
                        <TextField fx:id="usernameField" promptText="Ingrese su usuario" styleClass="text-field"/>
                    </VBox>

                    <VBox spacing="6.0">
                        <Label text="Contraseña:" styleClass="field-label"/>
                        <PasswordField fx:id="passwordField" promptText="Ingrese su contraseña" styleClass="text-field"/>
                    </VBox>

                    <Button fx:id="loginButton" text="Iniciar Sesión" onAction="#handleLogin" maxWidth="Infinity" styleClass="primary-button" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                        <font>
                            <Font name="System Bold" size="14.0"/>
                        </font>
                    </Button>

                    <Label fx:id="messageLabel" styleClass="message-label" wrapText="true" />
                </VBox>

                <HBox spacing="8.0" alignment="CENTER">
                    <Label text="¿Problemas para ingresar? Contacte al administrador." styleClass="muted-text"/>
                </HBox>
            </VBox>
        </StackPane>
    </children>
</AnchorPane>